<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="日本地図 天気アプリ" Height="800" Width="1000">

    <Grid Margin="10">
        <!-- 背景画像 -->
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\infosys\Desktop\tenki1.jpg"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 県選択 -->
        <ComboBox Name="PrefectureCombo"
                  FontSize="20"
                  Margin="10"
                  HorizontalAlignment="Center"
                  Width="300"
                  SelectionChanged="PrefectureCombo_SelectionChanged"/>

        <!-- 緯度経度 -->
        <TextBlock Name="CoordText"
                   Grid.Row="1"
                   FontSize="16"
                   Margin="10"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>

        <!-- 現在の天気 -->
        <TextBlock Name="CurrentWeatherText"
                   Grid.Row="2"
                   FontSize="24"
                   Margin="10"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>

        <!-- 時間ごとの天気カード -->
        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Auto" PanningMode="HorizontalOnly">
            <ItemsControl Name="WeatherItems">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#CCFFFFFF" CornerRadius="10" Margin="8" Padding="12" Width="180" Height="150">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Time}" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Temp, StringFormat={}{0}℃}" FontSize="20" Foreground="DarkRed" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Hum, StringFormat={}{0}% 湿度}" FontSize="14" Foreground="Gray" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Weather}" FontSize="18" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 明日の予報カード -->
        <Border Grid.Row="4" Background="#AAFFFFFF" CornerRadius="10" Margin="0,10,0,10" Padding="15" Width="724" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Name="TomorrowForecastText"
                           FontSize="20"
                           FontWeight="Bold"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 週間予報カード -->
        <ScrollViewer Grid.Row="5" HorizontalScrollBarVisibility="Auto" PanningMode="HorizontalOnly" Margin="10">
            <ItemsControl Name="WeeklyItems">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#CCFFFFFF" CornerRadius="10" Margin="8" Padding="12" Width="200" Height="150">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Date}" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Weather}" FontSize="18" TextAlignment="Center"/>
                                <TextBlock Text="{Binding TempRange}" FontSize="16" Foreground="DarkRed" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>